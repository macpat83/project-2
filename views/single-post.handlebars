<article class="post">
      <div class="title">
        <a href="{{post.albumart_url}}" target="_blank">{{albumart}}</a>
        <span>({{post.albumart_url}})</span>
        <a href="{{post.album_title}}" target="_blank">{{albumtitle}}</a>
        <span>({{post.album_title}})</span>
        <a href="{{post.album_artist}}" target="_blank">{{albumartist}}</a>
        <span>({{post.album_artist}})</span>
        <a href="{{post.review}}" target="_blank">{{review}}</a>
        <span>({{post.review}})</span>
      </div>
      <div class="meta">
        {{favorite_count}} point(s) by {{user.username}} on
        {{created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
      </div>
    </article>

    {{#if loggedIn}}
    <form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
    <button type="button" class="favorite-btn">favorite</button>
  </div>
</form>
{{/if}}

<div class="comments">
  {{#each post.comments}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
<script src="/javascript/favorite.js"></script>
{{/if}}